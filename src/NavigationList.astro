---
import type { HTMLAttributes, HTMLTag } from 'astro/types'
import type { Props as NavigationProps } from './Navigation.astro'
import NavigationItem from './NavigationItem.astro'
import type { Entry } from './utils.js'

export type Props<N extends HTMLTag = 'nav', T extends HTMLTag = 'ol'> = Omit<NavigationProps<T>, keyof HTMLAttributes<N>> & {
    entries: Entry[]
}

const {
    as: Component = 'ol',
    entries,
    disableCurrent,
    showExcerpts,
    itemAttrs,
    listAttrs,
} = Astro.props
---

<Component {...listAttrs}>
    {entries.map((entry) => (
        <NavigationItem {...entry} {disableCurrent} showExcerpt={showExcerpts} {itemAttrs} {listAttrs} {itemAttrs} />
    ))}
</Component>